<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.icee.snakehealthmanagementapp.viewmodel.MenuData" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/menu_list"
            app:srcCompat="@drawable/list_icon"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/menu_profile"
                app:srcCompat="@drawable/profile_icon"
                android:paddingVertical="10dp"
                android:paddingHorizontal="3dp" />

            <ImageView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/menu_settings"
                app:srcCompat="@drawable/settings_icon"
                android:paddingVertical="10dp"
                android:paddingHorizontal="3dp" />

            <ImageView
                android:id="@+id/feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/menu_feedback"
                app:srcCompat="@drawable/feedback_icon"
                android:paddingVertical="10dp"
                android:paddingHorizontal="3dp" />

            <ImageView
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/menu_help"
                app:srcCompat="@drawable/help_icon"
                android:paddingVertical="10dp"
                android:paddingHorizontal="3dp" />
        </LinearLayout>

    </LinearLayout>
</layout>
